<div class="my-4">
    <footer class="footer bg-base-100 text-neutral-content p-10">
        <aside>
            <h6 class="footer-title text-base-content">Baptiste</h6>
            <p class="text-base-content">
            made by <a class="text-primary" href="https://www.linkedin.com/in/baptiste-fotia">{{ cv.basics.name }}</a> - Tous droits réservés 2024
            </p>
        </aside>
        <nav>
            <h6 class="footer-title text-base-content">Social</h6>
            <div class="grid grid-flow-col gap-4">
                {% for social in cv.social_network %}
                    <a href={{ social.url }} alt={{ social.alt }}>
                        <img class="size-6" src={{ asset(social.img) }} alt={{ social.name }}>
                    </a>
                {% endfor %}
            </div>
        </nav>
        <nav>
            <h6 class="footer-title text-base-content">Theme</h6>
            <label class="grid cursor-pointer place-items-center">
                <input
                    type="checkbox"
                    value="dark"
                    class="toggle theme-controller bg-base-content col-span-2 col-start-1 row-start-1" />
                <svg
                    class="stroke-base-100 fill-base-100 col-start-1 row-start-1"
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round">
                    <circle cx="12" cy="12" r="5" />
                    <path
                    d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4" />
                </svg>
                <svg
                    class="stroke-base-100 fill-base-100 col-start-2 row-start-1"
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round">
                    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                </svg>
            </label>
        </nav>
    </footer>
</div>