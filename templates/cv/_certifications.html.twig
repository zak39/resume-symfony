<div class="my-4">
    <h1 id="certifications" class="text-3xl font-bold sm:text-4xl mb-16 ml-4 sm:ml-0">Certifications</h1>

    <ul class="timeline timeline-snap-icon max-md:timeline-compact timeline-vertical">
        {% for certificate in cv.certificates %}
        <li>
            {# boule avec le check #}
            <div class="timeline-middle">
                <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                class="h-5 w-5">
                    <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                    clip-rule="evenodd" />
                </svg>
            </div>

            {# détermine si c'est à droite ou à gauche #}        
            {% if loop.index % 2 == 1 %}
                <div class="timeline-start mb-10 md:text-end">
            {% else %}
                <div class="timeline-end mb-10">
            {% endif %}
                    <time class="font-mono italic">
                        {{ certificate.startDate|date('j F Y')|format_datetime('long', 'none', locale: 'fr') }}                  
                    </time>
                    <div class="text-lg font-black">{{ certificate.name }}</div>
                    {% if certificate.url is defined and not certificate.url == '' %}
                        <a class="text-primary" href={{ certificate.url }}>Voir la certification</a>
                    {% endif %}
                </div>
            {% if not loop.last %}
                <hr />
            {% endif %}
        </li>
        {% endfor %}
    </ul>
</div>
